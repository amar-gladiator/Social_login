

<%= render 'form' %>


<h4>Listing Products</h4>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Action</th>
      <th>Action</th>
      <th>Action</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= link_to 'Show', product,class: "btn btn-success" %></td>
        <div class="edit"><td><%= link_to '', edit_product_path(product) ,class: "glyphicon glyphicon-pencil"%></td></div>
        <td><%= link_to '', product, method: :delete, data: { confirm: 'Are you sure?' },class: "glyphicon glyphicon-trash" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

